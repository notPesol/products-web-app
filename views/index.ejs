<%- include('./partial/header.ejs') -%>

<%- include('./layouts/header.ejs') -%>
<div class="index">
  <% for (const product of products) {%>
    <div class="grid-item">
      <% if (product.images.length > 0) {%> 
        <img src="<%= product.images[0] %>" alt="product image">
      <% }else {%>
        <img src="https://images.unsplash.com/photo-1554424944-d72b391975b0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1053&q=80" alt="">
      <% } %>  
      <h3><a href="/<%= product._id %>"><%= product.name %></a></h3>
      <p class="category"><%= product.category %></p>
      <p>Price: $<%= product.price %></p>
      <p><%= product.description %> </p>
    </div>
  <% }%>
</div>

